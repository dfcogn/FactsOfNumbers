<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="ua.in.factsofnumbers.presentation.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_factFragment"
            app:destination="@id/factFragment" />
    </fragment>
    <fragment
        android:id="@+id/factFragment"
        android:name="ua.in.factsofnumbers.presentation.FactDescriptionFragment"
        android:label="@string/fact_description"
        tools:layout="@layout/fragment_fact_description" />
</navigation>